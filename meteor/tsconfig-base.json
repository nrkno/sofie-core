{
	"extends": "./tsconfig-meteor.json",
	"compilerOptions": {
		/* At the time of writing we are not ready for stricter rules */
		"strict": true,
		"target": "es2022",
		"allowImportingTsExtensions": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"allowJs": false,
		"lib": [
			"dom",
			"es2022",
			"dom.iterable",
			"scripthost"
		],
		"paths": {
			"meteor/*": [
				//   "./node_modules/@types/meteor/*",
				"./.meteor/local/types/packages.d.ts"
			]
		}
	},
	"include": [
		"client/**/*",
		"server/**/*",
		"lib/**/*",
		"__mocks__/**/*",
		"tslint-rules/**/*"
	],
	"exclude": [
		"node_modules",
		"**/.coverage/**/*"
	]
}
