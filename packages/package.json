{
	"private": true,
	"workspaces": {
		"packages": [
			"*-integration",
			"*-gateway",
			"corelib",
			"shared-lib",
			"job-worker",
			"documentation"
		],
		"nohoist": [
			"**/timeline-state-resolver-types",
			"**/timecode"
		]
	},
	"scripts": {
		"prepare": "cd .. && husky install",
		"postinstall": "yarn lerna bootstrap",
		"build": "yarn lerna run build",
		"build:try": "yarn lerna run --no-bail build",
		"watch": "lerna run --parallel build:main -- --watch --preserveWatchOutput",
		"sync-version-and-changelog": "lerna version --exact --force-publish --conventional-commits --no-git-tag-version --no-push --yes $(node -p \"require('../meteor/package.json').version\")",
		"postsync-version-and-changelog": "yarn stage-versions",
		"sync-version": "yarn set-version $(node -p \"require('../meteor/package.json').version\")",
		"stage-versions": "git add -u */package.json */CHANGELOG.md lerna.json",
		"set-version": "lerna version --exact --no-changelog --no-git-tag-version --no-push --yes",
		"validate:dependencies": "yarn audit --groups dependencies && yarn license-validate",
		"validate:dev-dependencies": "yarn audit --groups devDependencies",
		"license-validate": "yarn sofie-licensecheck --allowPackages \"caniuse-lite@1.0.30001341;mos-gateway@$(node -p \"require('mos-gateway/package.json').version\");playout-gateway@$(node -p \"require('playout-gateway/package.json').version\");sofie-documentation@$(node -p \"require('sofie-documentation/package.json').version\");@sofie-automation/corelib@$(node -p \"require('@sofie-automation/corelib/package.json').version\");@sofie-automation/shared-lib@$(node -p \"require('@sofie-automation/shared-lib/package.json').version\");@sofie-automation/job-worker@$(node -p \"require('@sofie-automation/job-worker/package.json').version\");lunr-languages@1.9.0\"",
		"lint": "lerna run --concurrency 4 --stream lint",
		"unit": "lerna run --concurrency 2 --stream unit -- --coverage=false",
		"test": "lerna run --concurrency 2 --stream test",
		"docs:typedoc": "yarn typedoc .",
		"docs:serve": "lerna run --scope sofie-documentation --stream start",
		"watch-for-worker-changes": "nodemon --delay 2.5 --watch job-worker/dist --watch corelib/dist --watch shared-lib/dist --watch blueprints-integration/dist --watch server-core-integration/dist ../scripts/meteor-force-restart.js"
	},
	"devDependencies": {
		"@babel/core": "^7.18.6",
		"@babel/plugin-transform-modules-commonjs": "^7.18.6",
		"@sofie-automation/code-standard-preset": "~2.0.2",
		"@types/amqplib": "^0.8.2",
		"@types/debug": "^4.1.7",
		"@types/ejson": "^2.2.0",
		"@types/got": "^9.6.12",
		"@types/jest": "^27.5.1",
		"@types/node": "^14.18.12",
		"@types/object-path": "^0.11.1",
		"@types/underscore": "^1.11.4",
		"babel-jest": "^27.5.1",
		"copyfiles": "^2.4.1",
		"jest": "^27.5.1",
		"lerna": "^4.0.0",
		"nodemon": "^2.0.18",
		"open-cli": "^7.0.1",
		"rimraf": "^3.0.2",
		"semver": "^7.3.7",
		"ts-jest": "^27.1.3",
		"ts-node": "^9.1.1",
		"typedoc": "^0.22.15",
		"typescript": "~4.5"
	},
	"name": "packages",
	"resolutions": {
		"lerna/**/trim-newlines": "^4.0.1"
	}
}
