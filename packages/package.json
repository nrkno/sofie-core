{
	"private": true,
	"workspaces": {
		"packages": [
			"*-integration",
			"*-gateway"
		],
		"nohoist": [
			"**/timeline-state-resolver-types"
		]
	},
	"scripts": {
		"postinstall": "yarn lerna bootstrap",
		"build": "yarn lerna exec yarn build",
		"watch": "concurrently --prefix \"[{name}]\" --names \"BI,SCI\" -c \"bgBlue.bold,bgGreen.bold\" \"yarn workspace @sofie-automation/blueprints-integration build:main --watch\" \"yarn workspace @sofie-automation/server-core-integration build:main --watch\"",
		"docs": "yarn typedoc .",
		"sync-version-and-changelog": "lerna version --conventional-commits --no-git-tag-version --no-push --yes $(node -p \"require('../meteor/package.json').version\")",
		"sync-version": "lerna version --no-changelog --no-git-tag-version --no-push --yes $(node -p \"require('../meteor/package.json').version\")",
		"validate:dependencies": "yarn audit --groups dependencies && yarn license-validate",
		"validate:dev-dependencies": "yarn audit --groups devDependencies",
		"license-validate": "yarn sofie-licensecheck --allowPackages cycle@1.0.3"
	},
	"devDependencies": {
		"@sofie-automation/code-standard-preset": "^0.2.1",
		"@strictsoftware/typedoc-plugin-monorepo": "^0.4.2",
		"@types/ejson": "^2.1.2",
		"@types/got": "^9.6.11",
		"@types/jest": "^26.0.19",
		"@types/node": "^12.20.4",
		"@types/underscore": "^1.10.24",
		"codecov": "^3.8.1",
		"concurrently": "^6.0.0",
		"copyfiles": "^2.4.1",
		"jest": "^26.6.3",
		"jest-haste-map": "^26.6.2",
		"jest-resolve": "^26.6.2",
		"lerna": "^4.0.0",
		"node-license-validator": "^1.3.0",
		"npm-scripts-info": "^0.3.9",
		"open-cli": "^6.0.1",
		"rimraf": "^3.0.2",
		"ts-jest": "^26.5.2",
		"tslint": "^6.1.3",
		"tslint-config-standard": "^9.0.0",
		"typedoc": "^0.20.33",
		"typescript": "~4.0"
	},
	"name": "packages",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx}": [
			"yarn lint-fix"
		]
	},
	"resolutions": {
		"node-license-validator/**/minimist": "^1.2.3"
	}
}
